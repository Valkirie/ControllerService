<Page x:Class="ControllerHelperWPF.DevicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:local="clr-namespace:ControllerHelperWPF"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1000"
      Loaded="Page_Loaded"
      Title="Devices">

    <Page.Resources>
        <local:InverseAppThemeConverter x:Key="InverseAppThemeConverter" />
    </Page.Resources>

    <Grid Name="MainGrid" Margin="20,20,20,20" IsEnabled="False">
        <Border Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}">
            <ui:SimpleStackPanel Spacing="24">

                <!-- Header -->
                <Border
                        Background="{DynamicResource SystemControlPageBackgroundChromeMediumLowBrush}"
                        Height="300"
                        Padding="0,12,12,12"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="{DynamicResource ControlCornerRadius}">

                    <Grid Name="ControllerGrid">
                        <Grid.Background>
                            <ImageBrush ImageSource="/Resources/controller_1_0.png" Stretch="Uniform"/>
                        </Grid.Background>
                        <ui:SimpleStackPanel Spacing="18" VerticalAlignment="Bottom">
                            <ui:SimpleStackPanel Spacing="18" HorizontalAlignment="Right" Orientation="Horizontal">
                                <Button Name="B_ServiceSwitch" Content="Connect" Width="Auto" Background="{DynamicResource SystemControlHighlightListAccentLowBrush}" Click="B_ServiceSwitch_Click"/>
                                <ComboBox Name="cB_HidMode" Width="Auto" SelectionChanged="cB_HidMode_SelectionChanged"/>
                            </ui:SimpleStackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*" MinWidth="80"></ColumnDefinition>
                                    <ColumnDefinition Width="3.5*" MinWidth="200"></ColumnDefinition>
                                    <ColumnDefinition Width="6*" MinWidth="120"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <ui:FontIcon Glyph="&#xE877;" Grid.Column="0" HorizontalAlignment="Center"/>

                                <ui:SimpleStackPanel Grid.Column="1">
                                    <TextBlock Text="Vibration strength" FontSize="16"/>
                                    <TextBlock Text="Change controller vibration strength" FontSize="14" TextWrapping="Wrap"/>
                                </ui:SimpleStackPanel>

                                <Slider Grid.Column="2" VerticalAlignment="Center" AutoToolTipPlacement="TopLeft" LargeChange="10" Maximum="100" Minimum="1" SmallChange="1" TickFrequency="10" Value="50" TickPlacement="BottomRight"></Slider>
                            </Grid>
                        </ui:SimpleStackPanel>
                    </Grid>
                </Border>

                <!-- XInput details -->
                <ui:SimpleStackPanel Spacing="6">
                    <Label Content="XInput details" FontWeight="SemiBold"></Label>
                    <Border
                        Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                        Padding="12"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="{DynamicResource ControlCornerRadius}"
                        ui:ThemeManager.RequestedTheme="{Binding Source={x:Static ui:ThemeManager.Current}, Path=ActualApplicationTheme, Converter={StaticResource InverseAppThemeConverter}}">

                        <ui:SimpleStackPanel Spacing="10">
                            <TextBox
                                ui:ControlHelper.Header="Device name"
                                Name = "DeviceName"
                                Text=""
                                IsReadOnly="True" />
                            <TextBox
                                ui:ControlHelper.Header="Instance ID"
                                Name = "DeviceInstanceID"
                                Text=""
                                IsReadOnly="True" />
                            <TextBox
                                ui:ControlHelper.Header="Product ID"
                                Name = "DeviceProductID"
                                Text=""
                                IsReadOnly="True" />
                        </ui:SimpleStackPanel>
                    </Border>
                </ui:SimpleStackPanel>

                <!-- Device cloaking -->
                <ui:SimpleStackPanel Spacing="6">
                    <Label Content="Device cloaking" FontWeight="SemiBold"></Label>

                    <!-- Cloak device -->
                    <Border
                        Background="{DynamicResource SystemControlPageBackgroundChromeMediumLowBrush}"
                        Padding="0,12,12,12"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="{DynamicResource ControlCornerRadius}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*" MinWidth="80"></ColumnDefinition>
                                <ColumnDefinition Width="7.5*" MinWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="2*" MinWidth="120"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <ui:FontIcon Glyph="&#xE793;" Height="50" Grid.Column="0" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Cloak device" FontSize="16"/>
                                <TextBlock Text="Change the physical controller visibility" FontSize="14" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>

                            <ui:ToggleSwitch Grid.Column="2" FlowDirection="RightToLeft" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Uncloak on close -->
                    <Border
                        Background="{DynamicResource SystemControlPageBackgroundChromeMediumLowBrush}"
                        Padding="0,12,12,12"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="{DynamicResource ControlCornerRadius}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*" MinWidth="80"></ColumnDefinition>
                                <ColumnDefinition Width="7.5*" MinWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="2*" MinWidth="120"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <ui:FontIcon Glyph="&#xE7B3;" Height="50" Grid.Column="0" HorizontalAlignment="Center"/>

                            <ui:SimpleStackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Uncloak on close" FontSize="16"/>
                                <TextBlock Text="Restore physical controller visibility on close" FontSize="14" TextWrapping="Wrap"/>
                            </ui:SimpleStackPanel>

                            <ui:ToggleSwitch Grid.Column="2" FlowDirection="RightToLeft" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </ui:SimpleStackPanel>

                <Button
                        Content="Toggle theme"
                        Click="ToggleTheme" />
                <Button
                    Name="B_ServiceAlert" Content="Service is not running" IsEnabled="False" Width="340"/>
            </ui:SimpleStackPanel>
        </Border>
    </Grid>
</Page>