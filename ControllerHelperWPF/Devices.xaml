<Page x:Class="ControllerHelperWPF.Devices"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ControllerHelperWPF"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:tz="http://schemas.abtsoftware.co.uk/transitionz"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
      Title="Devices" Background="#FF6B3030">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/xbox_controller.png" Stretch="None"/>
        </Grid.Background>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="60" Margin="0,250,0,0">
            <WrapPanel Height="60" Width="150">
                <ui:FontIcon Height="50" Width="50" Glyph="&#xE946;"/>
                <TextBlock TextWrapping="Wrap" Text="Turn On" FontSize="18" VerticalAlignment="Center" Padding="0,0,0,0"/>
            </WrapPanel>
        </Button>
        <ComboBox Name="cB_HidMode" Margin="0,133,0,0" Width="340" HorizontalAlignment="Center">
        </ComboBox>
    </Grid>
</Page>