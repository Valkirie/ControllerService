<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
	<TargetPlatformVersion>10.0.18362.0</TargetPlatformVersion>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <StartupObject>ControllerHelperWPF.App</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="ControllerHelper.json" />
    <None Remove="HelperGUI.png" />
    <None Remove="xbox_controller.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="ControllerHelper.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="6.0.0" />
    <PackageReference Include="Microsoft.UI.Xaml" Version="2.7.0" />
    <PackageReference Include="ModernWpfUI" Version="0.9.4" />
    <PackageReference Include="Serilog" Version="2.10.0" />
    <PackageReference Include="Serilog.Extensions.Logging" Version="3.1.0" />
    <PackageReference Include="Serilog.Settings.Configuration" Version="3.3.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.0.1" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="HelperGUI.png" />
    <Resource Include="xbox_controller.png" />
  </ItemGroup>

</Project>
